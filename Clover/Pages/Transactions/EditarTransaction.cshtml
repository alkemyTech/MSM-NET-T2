@page "/Transaction/editar/{id}"
@model Clover.Pages.Transactions.EditarTransactionModel
@{
}
<head>
    <style>
        #form-container{
            color: white;
        }
    </style>
</head>

<body>
    <!-- Formulario con los campos de edición del usuario-->
    <form method="post">
        <div id="form-container">
            <div class="form-group">
                <label>Id de Transaccíon</label>
                <input type="number" class="form-control" asp-for="Transaction.TransactionId" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount">Monto</label>
                <input type="text" class="form-control" asp-for="Transaction.Amount" required>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Concept">Concepto</label>
                <input type="text" class="form-control" asp-for="Transaction.Concept" required>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Type">Tipo</label>
                <input type="text" class="form-control" name="Transaction.Type" asp-for="Transaction.Type">
            </div>
            <div class="form-group">
                <label asp-for="Transaction.AccountId">Cuenta N°</label>
                <input type="number" class="form-control" asp-for="Transaction.AccountId" required>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.UserId">User N°</label>
                <input type="number" class="form-control" asp-for="Transaction.UserId" required>
            </div>
            <div class="form-group" id="ToAccount">
                <label asp-for="Transaction.ToAccountId">A Cuenta N°</label>
                <input type="number" class="form-control" asp-for="Transaction.ToAccountId">
            </div>
        </div>

        <!-- Botones de edición -->
        <div class="modal-footer">
            <a href="/Usuarios"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button></a>
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Eliminar
            </button>
        </div>
    </form>


    <!-- Modal para confirmar la eliminación del Usuario -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar este elemento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post"><input id="delete" type="submit" asp-page-handler="Delete" class="btn btn-danger" value="Eliminar"></input></form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Oculta el campo ToAccountId al cargar la página
            $('#ToAccount').hide();
           
            // Agrega un evento change a los radio buttons con name "Transaction.Type"
            $('input[name="Transaction.Type"]').change(function () {
                // Verifica si el valor seleccionado es "topup"
                if ($(this).val() === 'topup') {
                    
                    // Oculta el campo ToAccountId si es "topup"
                    $('#ToAccount').hide();
                } else {
                    // Muestra el campo ToAccountId para otros tipos
                    $('#ToAccount').show();
                }
            });
        });
    </script>
</body>

