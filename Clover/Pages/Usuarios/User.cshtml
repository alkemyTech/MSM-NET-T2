@page "/User"
@model UserModel
@{
    Layout = "_Layout-Logeado";
}

<style>
    .User {
        display: flex;
        justify-content: space-around;
        transform: translateY(20%);
    }

    .userButtons {
        display: flex;
        flex-direction: column; /* Establece la dirección del diseño a columna */
        align-items: flex-start;
        justify-content: space-between

    }

    .buttonUserLink {
        margin: 5px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 40px;
        background: transparent;
        color: #f4eee4;
        width: 140px;
        height: 50px;
        transition: .5s;
        border: 1px solid #51DAC9;
    }

        .buttonUserLink:hover {
            background: rgba(81, 218, 201, 0.50);
            scale: 1.1;
            transition: .5s;
        }

    .buttonUserLink> a{
        color : white;
        text-decoration: none;   }

    .dataUserDiv {
        background: rgba(35, 173, 99, 0.5); /* Establece el color de fondo */
        border-radius: 20px;
        width: 420px;
        height: 350px;
    }

    .card {
        background: rgba(81, 218, 201, 0.10);
        border-radius: 20px; /* Bordes redondeados para las tarjetas individuales */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para resaltar las tarjetas */
        height: 70px;
    }


</style>
<body>

    <div class="User">

        <div class="dataUserDiv">

            <div class="card">
                <div class="card-body">@Model.Encontrado.First_name </div>
            </div>
            <div class="card">
                <div class="card-body">@Model.Encontrado.Last_name</div>
            </div>
            <div class="card">
                <div class="card-body">@Model.Encontrado.Email</div>
            </div>
            <div class="card">
                <div class="card-body">@Model.Encontrado.Points</div>
            </div>
            <div class="card">
                <div class="card-body">@Model.Encontrado.Role_Id</div>
            </div>
        </div>


        <div class="userButtons">
            <button class="buttonUserLink"><a href="/FixedTerms/FixedTermDeposit" class="button">Plazos Fijos</a></button>
            <button class="buttonUserLink"><a href="/Transactions" class="button">Transacciones</a></button>
            <button class="buttonUserLink"><a href="/Accounts" class="button">Cuenta</a></button>
            <button class="buttonUserLink"><a href="/Catalogue" class="button">Catalogo</a></button>

        </div>

    </div>
</body>


