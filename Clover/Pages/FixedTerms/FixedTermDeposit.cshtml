@page
@model Clover.Pages.FIxedTermDepositModel
@{
    ViewData["Title"] = "Plazos Fijos";
}
<div class=" = fixedTermIntro">
<h1>@ViewData["Title"]</h1>

 <button><a href="/FixedTerms/FormNewFixedTerm" class="button">Nuevo plazo fijo</a></button>
 </div>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuario</th>
            <th>Cuenta</th>
            <th>Monto</th>
            <th>Fecha de Creacion</th>
            <th>Fecha de Finalizacion</th>
            <th>Tasa</th>
            <th>Estado</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var fixedTerm in Model.FixedTermDeposit)
        {
            <tr>
                <td>@fixedTerm.Id</td>
                <td>@fixedTerm.UserId</td>
                <td>@fixedTerm.AccountId</td>
                <td>@fixedTerm.Amount</td>
                <td>@fixedTerm.CreationDate</td>
                <td>@fixedTerm.ClosingDate</td>
                <td>@fixedTerm.NominalRate</td>
                <td>@fixedTerm.State</td>
                <td>
                    <a asp-page="FixedTerms/FormEditFixedTerm" asp-route-id="@fixedTerm.Id" class="btn btn-primary">Editar</a>
                    <form asp-page-handler="Delete" asp-route-id="@fixedTerm.Id" method="post">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
